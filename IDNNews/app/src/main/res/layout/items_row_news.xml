<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/item_img_news"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/item_tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_img_news"
            android:layout_marginTop="8dp"
            android:text="Judul Berita"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_penulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_judul"
            android:layout_marginTop="4dp"
            android:text="Penulis" />

        <TextView
            android:id="@+id/item_tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_judul"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:text="Tanggal Posting" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>